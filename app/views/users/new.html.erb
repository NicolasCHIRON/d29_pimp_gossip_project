</br><h1> Création de compte</h1></br>

  <center>
    <%= form_tag("/users", method: :post) do %>

      <%= text_field_tag "first_name", nil, placeholder:"Prénom...", :size=>"50" %>
      <br/><br/>

      <%= text_field_tag 'last_name', nil, placeholder:"Nom de famille...", :size=>"50" %>
      <br/><br/>

      <%= text_field_tag 'description', nil, placeholder:"Description...", :size=>"50" %>
      <br/><br/>

      <%= text_field_tag 'email', nil, placeholder:"Adresse mail...", :size=>"50" %>
      <br/><br/>

      <%= text_field_tag 'age', nil, placeholder:"Age...", :size=>"50" %>
      <br/><br/>

      <%= text_field_tag 'password', nil, placeholder:"Mot de passe...", :size=>"50" %>
      <br/><br/>

      <%= text_field_tag 'password_confirmation', nil, placeholder:"Confirmation du mot de passe...", :size=>"50" %>
      <br/><br/>

      <%= submit_tag "Créer son compte", class:"spec_btn" , data: {turbo:false} %>

    <% end %>

  </center>
